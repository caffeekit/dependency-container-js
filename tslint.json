{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "indent": [
            true,
            "spaces",
            4
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "new-parens": true,
        "arrow-parens": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "variable-name": {
            "options": [
                "allow-leading-underscore"
            ]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}