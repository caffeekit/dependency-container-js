{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "module": "ES2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "lib": [
        "es2018",
        "dom"
    ]
}